<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    
  
    <item android:state_pressed="false">
        
<shape>
    <solid android:color="#fff"/>
    <corners android:radius="12dp"/>
     <gradient
    android:type="linear"
    android:angle="135"
    android:startColor="#4b0082"
    android:endColor="#856a9b" />
     
     <stroke 
         android:width="3dp"
         android:color="#eee"
         />
    <padding
         
         android:left="@dimen/lima"
         android:top="@dimen/lima"
         android:bottom="@dimen/lima"
         android:right="@dimen/lima"
         
         />
</shape>
       
    </item>
    
     
     <item android:state_pressed="true">
    <shape>
    <solid android:color="#ddd"/>
    <corners android:radius="15dp"/>
    
    <gradient
    android:type="linear"
    android:angle="135"
    android:endColor="#4b0082"
    android:startColor="#856a9b"/>
 	</shape>
 	 
     <stroke 
         android:width="3dp"
         android:color="#eee"
         />
       
        
    </item>
    
</selector>


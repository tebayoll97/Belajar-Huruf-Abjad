<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context="com.tebayoll.hurufabjad.Warna" >
    
    
    <Button 
        android:onClick="back"
        android:id="@+id/back"
        android:layout_marginLeft="@dimen/back_mL"
        android:layout_marginRight="@dimen/back_mR"
        android:layout_marginTop="@dimen/back_mT"
        android:layout_marginBottom="@dimen/back_mB"
        android:background="@drawable/back"
        android:layout_height="@dimen/back_h"
        android:layout_width="@dimen/back_w"
        android:layout_alignParentLeft="true"
        />
    
    
    <RelativeLayout 
        android:id="@+id/rlKanan"
        android:layout_toRightOf="@+id/back"
    	android:padding="@dimen/activity_vertical_margin"
        android:background="@drawable/bg_lan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">
        
        <Button
   			     android:layout_alignParentTop="true"
   			     android:layout_centerHorizontal="true"
        			android:id="@+id/wrn_dasar"
        			android:text="MENGENAL WARNA DASAR"
        			android:textAllCaps="true"
        			android:textColor="#fff"
        			android:textStyle="bold"
        			android:textSize="@dimen/tx_header"
        			android:background="@drawable/bg_header"
        			android:layout_marginTop="@dimen/tag_soal_tebak_mT"
       				android:layout_width="match_parent"
       				android:layout_height="@dimen/tagsoal_h"/>
        
     <RelativeLayout 
        android:layout_marginTop="@dimen/warna_m"
        android:id="@+id/rlKanan1"
        android:layout_below="@+id/wrn_dasar"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
         <Button 
        android:id="@+id/btn1"
        android:text="Merah"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="@dimen/tx_warna"
        android:background="@drawable/wmerah"
        android:layout_margin="@dimen/warna_m"
        android:layout_width="@dimen/warna_w"
        android:layout_height="@dimen/warna_h"
        />
         
         <Button 
        android:id="@+id/btn2"
        android:layout_toRightOf="@+id/btn1"
        android:text="Biru"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="@dimen/tx_warna"
        android:background="@drawable/wbiru"
        android:layout_margin="@dimen/warna_m"
        android:layout_width="@dimen/warna_w"
        android:layout_height="@dimen/warna_h"
        />
         
         
         
         <Button 
        android:id="@+id/btn3"
        android:layout_toRightOf="@+id/btn2"
        android:text="Kuning"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="@dimen/tx_warna"
        android:background="@drawable/wkuning"
        android:layout_margin="@dimen/warna_m"
        android:layout_width="@dimen/warna_w"
        android:layout_height="@dimen/warna_h"
        />
         
          <Button 
        android:id="@+id/btn4"
        android:layout_toRightOf="@+id/btn3"
        android:text="Hijau"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="@dimen/tx_warna"
        android:background="@drawable/whijau"
        android:layout_margin="@dimen/warna_m"
        android:layout_width="@dimen/warna_w"
        android:layout_height="@dimen/warna_h"
        />
          
           <Button 
        android:id="@+id/btn5"
        android:layout_toRightOf="@+id/btn4"
        android:text="Ungu"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="@dimen/tx_warna"
        android:background="@drawable/wungu"
        android:layout_margin="@dimen/warna_m"
        android:layout_width="@dimen/warna_w"
        android:layout_height="@dimen/warna_h"
        />
         
        
         </RelativeLayout>
         
      <RelativeLayout 
        android:id="@+id/rlKanan2"
        android:layout_below="@+id/rlKanan1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <Button 
        android:id="@+id/btn6"
        android:text="Jingga"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="@dimen/tx_warna"
        android:background="@drawable/wjingga"
        android:layout_margin="@dimen/warna_m"
        android:layout_width="@dimen/warna_w"
        android:layout_height="@dimen/warna_h"
        />
         
         <Button 
        android:id="@+id/btn7"
        android:layout_toRightOf="@+id/btn6"
        android:text="Nila"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="@dimen/tx_warna"
        android:background="@drawable/wnila"
        android:layout_margin="@dimen/warna_m"
        android:layout_width="@dimen/warna_w"
        android:layout_height="@dimen/warna_h"
        />
         
         
         
         <Button 
        android:id="@+id/btn8"
        android:layout_toRightOf="@+id/btn7"
        android:text="Merah\nMuda"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="@dimen/tx_warna"
        android:background="@drawable/wmerah_muda"
        android:layout_margin="@dimen/warna_m"
        android:layout_width="@dimen/warna_w"
        android:layout_height="@dimen/warna_h"
        />
         
          <Button 
        android:id="@+id/btn9"
        android:layout_toRightOf="@+id/btn8"
        android:text="Hitam"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="@dimen/tx_warna"
        android:background="@drawable/whitam"
        android:layout_margin="@dimen/warna_m"
        android:layout_width="@dimen/warna_w"
        android:layout_height="@dimen/warna_h"
        />
          
           <Button 
        android:id="@+id/btn10"
        android:layout_toRightOf="@+id/btn9"
        android:text="Putih"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="@dimen/tx_warna"
        android:background="@drawable/wputih"
        android:layout_margin="@dimen/warna_m"
        android:layout_width="@dimen/warna_w"
        android:layout_height="@dimen/warna_h"
        />
         
        
         </RelativeLayout>
     
     
     </RelativeLayout>

   

</RelativeLayout>